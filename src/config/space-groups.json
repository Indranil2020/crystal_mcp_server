        "alpha": 90,
        "beta": 90,
        "gamma": 90
      }
    },
    "trigonal": {
      "space_group_range": [143, 167],
      "lattice_constraints": {
        "a": "equal_abc",
        "b": "equal_abc",
        "c": "equal_abc",
        "alpha": "equal_angles",
        "beta": "equal_angles",
        "gamma": "equal_angles",
        "note": "OR hexagonal axes: a=b!=c, alpha=beta=90, gamma=120"
      }
    },
    "hexagonal": {
      "space_group_range": [168, 194],
      "lattice_constraints": {
        "a": "equal_ab",
        "b": "equal_ab",
        "c": "any",
        "alpha": 90,
        "beta": 90,
        "gamma": 120
      }
    },
    "cubic": {
      "space_group_range": [195, 230],
      "lattice_constraints": {
        "a": "equal_abc",
        "b": "equal_abc",
        "c": "equal_abc",
        "alpha": 90,
        "beta": 90,
        "gamma": 90
      }
    }
