      "space_group_range": [1, 2],
      "lattice_constraints": {
        "a": "any",
        "b": "any",
        "c": "any",
        "alpha": "any",
        "beta": "any",
        "gamma": "any"
      }
    },
    "monoclinic": {
      "space_group_range": [3, 15],
