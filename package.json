{
  "name": "crystal-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for generating accurate crystal structures for DFT and quantum chemistry calculations using PyXtal",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "crystal-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "install-python": "pip install -r requirements.txt",
    "setup": "npm install && npm run install-python && npm run build",
    "clean": "rm -rf dist node_modules",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "crystal",
    "structure",
    "generation",
    "pyxtal",
    "dft",
    "quantum-chemistry",
    "materials-science",
    "mcp",
    "model-context-protocol",
    "mlff",
    "machine-learning-force-fields"
  ],
  "author": "Crystal MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "python-shell": "^5.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
